{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
    "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },       
    { "source": "/((?!api/).*)", "destination": "/" }           
  ]
}
